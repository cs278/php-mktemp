{
    "name": "cs278/mktemp",
    "description": "Create temporary files and directories using PHP safely.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Smith",
            "email": "chris@cs278.org"
        }
    ],
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "Cs278\\Mktemp\\": "src/"
        }
    },
    "require": {
        "php": "^5.3.3 || ^7 || ^8"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.3.0",
        "symfony/phpunit-bridge": "5.2.*"
    },
    "scripts": {
        "cs": "php-cs-fixer fix"
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        }
    }
}
